@model List<ITB.Kusys.Cse.Project.Entities.Concrete.Student>
@{
    ViewData["Title"] = "Student List";
    Layout = "_Layout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Student /</span> Student List</h4>
    <div class="card">
        <h5 class="card-header">
            <a href="/Student/Create" class="btn btn-secondary">New Student</a>
        </h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Tr Identity Number</th>
                    <th>Birth Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Id</strong>
                            </td>
                            <td>@item.FirstName @item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.TrIdentityNumber</td>
                            <td>@item.BirthDate.ToString("dddd, dd MMMM yyyy")</td>
                            <td>
                                <a data-bs-toggle="modal" data-bs-target="#modalToggle-@item.Id" class="btn rounded-pill btn-icon btn-outline-dark">
                                    <span class="tf-icons bx bx-info-circle"></span>
                                </a>
                                <a href="/student-edit/@item.Id" class="btn rounded-pill btn-icon btn-outline-warning">
                                    <span class="tf-icons bx bx-edit-alt"></span>
                                </a>
                                <a href="/student-delete/@item.Id" class="btn rounded-pill btn-icon btn-outline-danger">
                                    <span class="tf-icons bx bx-trash-alt"></span>
                                </a>

                                <div
                                    class="modal fade"
                                    id="modalToggle-@item.Id"
                                    aria-labelledby="modalToggleLabel"
                                    tabindex="-1"
                                    style="display: none"
                                    aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="modalToggleLabel">Student Info</h5>
                                                <button
                                                    type="button"
                                                    class="btn-close"
                                                    data-bs-dismiss="modal"
                                                    aria-label="Close">
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <p><b>Fullname : </b> @item.FirstName @item.LastName</p>
                                                <p><b>Email : </b>@item.Email </p>
                                                <p><b>TrIdentityNumber : </b>@item.TrIdentityNumber</p>
                                                <p><b>BirthDate : </b>@item.BirthDate.ToString("dddd, dd MMMM yyyy")</p>
                                            </div>
                                            <div class="modal-footer">
                                               
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>